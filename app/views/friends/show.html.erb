<br>
<div class="bg-light p-5 rounded">
  <h1 class="display-6"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="lead">
    <%= @friend.phone %> | <%= @friend.twitter %>
  </p>
  <p class="lead">
    <%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-secondary" %> 
    <%= link_to 'Destroy', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    <%= link_to 'Back', friends_path, class: "btn btn-secondary" %>
  </p>
</div>